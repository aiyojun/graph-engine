{
  "compilerOptions": {
    "target": "es2015",
    "lib": [
      "dom",
      "es2021"
    ],
    "module": "es2015",
    "declaration": true,
    "moduleResolution": "Node",
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.js",
  ]
}
